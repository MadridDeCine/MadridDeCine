<div class="container">

  <div class="row">

    <div class="col-md-6">
      <h1 style="font-weight: 100">Crear Pelicula</h1>
    </div>

    <div class="col-md-6">

      <form action="/film/new" method="post">
        <div class="form-group">
          <label for="title-input">Title</label>
          <input name="title" type="text" class="form-control" id="title-input" placeholder="Title">
        </div>
        <div class="form-group">
          <label for="year-input">Year</label>
          <input name="year" type="text" class="form-control" id="year-input" placeholder="19xx">
        </div>
        <div class="form-group">
          <label for="director-input">Director</label>
          <input name="director" type="text" class="form-control" id="director-input" placeholder="Director mcDirector">
        </div>
        <div class="form-group">
          <label for="place-input">Place</label>
          <input name="place" type="text" class="form-control" id="place-input" placeholder="A place">
        </div>
        <div class="form-group">
          <label for="argument-textarea">Argumento</label>
          <textarea type="text"name="argument" id="argument-textarea" cols="60" rows="4" placeholder="Once upon a time...">
            
          </textarea>
        </div>

        <div class="form-group">
          <label for="actors-input">Actores:</label>
            {{!-- {{#each actors}}
            <div class="form-group">
              <label for="actor-input">Actor</label>
              <input name="actors" type="text" class="form-control" id="actor-input" value="{{name}}">
            </div>
            {{/each}} --}}
          </select>
        </div>

        <button type="submit" class="btn btn-dark">Editar Pelicula</button>
        <a href="/film" class="btn btn-dark">Volver</a>

      </form>
    </div>

  </div>
</div>