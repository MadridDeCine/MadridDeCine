<div class="content-wrap mt-5">

  <div class="row">

    <div class="col-md-6">
      <h1 style="font-weight: 100">Crear un evento</h1>
    </div>

    <div class="col-md-6">

      <form action="/met/new" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label for="name-input">Nombre:</label>
          <input name="name" type="text" class="form-control" id="name-input" placeholder="my meeting">
        </div>
        <div class="form-group">
          <label for="descr-input">Descripcion:</label>
          <input name="description" type="text" class="form-control" id="descr-input"
            placeholder="Ciclo de cine negro gratuito en Cine Callao">
        </div>
        <div class="form-group">
          <label for="place-input">Lugar:</label>
          <input name="place" type="text" class="form-control" id="place-input" placeholder="Plaza Callao">
        </div>
        <div class="form-group">
          <label for="hour-input">Hora:</label>
          <input name="hour" type="text" class="form-control" id="hour-input" placeholder="17:30">
        </div>
        <div class="form-group">
          <label for="date-input">Fecha:</label>
          <input name="date" type="date" class="form-control" id="date-input">
        </div>

        <div class="form-group">
          <label for="photo-input">Imagen:</label>
          <input type="file" name="phototoupload"><br>
        </div>

        <button type="submit" class="btn btn-dark">AÃ±adir</button>
        <a href="/met" class="btn btn-dark">Volver</a>

      </form>
    </div>

  </div>
</div>


