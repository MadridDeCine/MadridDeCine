<div class="container">

  <div class="row">

    <div class="col-md-6">
      <h1 style="font-weight: 100">Create Met</h1>
    </div>

    <div class="col-md-6">

      <form action="/met/new" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label for="name-input">Name</label>
          <input name="name" type="text" class="form-control" id="name-input" placeholder="my meeting">
        </div>
        <div class="form-group">
          <label for="descr-input">Description</label>
          <input name="description" type="text" class="form-control" id="descr-input" placeholder="Let's catch pokemon!">
        </div>
        <div class="form-group">
          <label for="place-input">Place</label>
          <input name="place" type="text" class="form-control" id="place-input" placeholder="Gran Via's Primark">
        </div>
        <div class="form-group">
          <label for="hour-input">Hour</label>
          <input name="hour" type="text" class="form-control" id="hour-input" placeholder="17:30">
        </div>
        <div class="form-group">
          <label for="date-input">date</label>
          <input name="date" type="date" class="form-control" id="date-input">
        </div>
